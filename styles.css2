 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dreams Quiz</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Quiz: Interesting Facts About Dreams</h1>
    <div id="quiz-container">
        <div id="question"></div>
        <div id="answers"></div>
        <button id="next-btn" onclick="nextQuestion()" style="display:none;">Next</button>
    </div>
    <div id="result-container" style="display:none;">
        <h2>Your Score: <span id="score"></span></h2>
    </div>

    <script>
        const quizData = [
            {
                question: "How much of your dream do you forget within five minutes of waking up?",
                answers: ["25%", "50%", "75%", "90%"],
                correct: "50%"
            },
            {
                question: "What percentage of your dream fades away after ten minutes?",
                answers: ["50%", "70%", "90%", "100%"],
                correct: "90%"
            },
            {
                question: "Which of the following sensory modalities is NOT typically represented in dreams?",
                answers: ["Visual", "Auditory (sounds)", "Tactile (touch)", "None of the above"],
                correct: "None of the above"
            },
            {
                question: "In lucid dreams, what unique ability do you have?",
                answers: ["You can fly without any effort.", "You can control the events of your dream.", "You can talk to animals.", "You can change the weather."],
                correct: "You can control the events of your dream."
            },
            {
                question: "What is the primary characteristic of experiences in typical dreams?",
                answers: ["They are abstract and vague.", "They have a clear sensory character (i.e., seen, heard, and felt).", "They are only visual with no sound.", "They are purely logical and rational."],
                correct: "They have a clear sensory character (i.e., seen, heard, and felt)."
            }
        ];

        let currentQuestionIndex = 0;
        let score = 0;

        function loadQuestion() {
            const currentQuestion = quizData[currentQuestionIndex];
            document.getElementById("question").textContent = currentQuestion.question;
            const answersContainer = document.getElementById("answers");
            answersContainer.innerHTML = "";

            currentQuestion.answers.forEach(answer => {
                const button = document.createElement("button");
                button.textContent = answer;
                button.onclick = () => selectAnswer(answer);
                answersContainer.appendChild(button);
            });
            document.getElementById("next-btn").style.display = "none"; // Hide the next button initially
        }

        function selectAnswer(answer) {
            if (answer === quizData[currentQuestionIndex].correct) {
                score++;
            }
            currentQuestionIndex++;
            if (currentQuestionIndex < quizData.length) {
                loadQuestion();
            } else {
                showResult();
            }
        }

        function showResult() {
            document.getElementById("quiz-container").style.display = "none";
            document.getElementById("result-container").style.display = "block";
            document.getElementById("score").textContent = score;
        }

        loadQuestion();
    </script>
</body>
</html>

</body>
</html>